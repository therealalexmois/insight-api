# ─── App Configuration ─────────────────────────────────────
APP_ENV=local
APP_HOST=127.0.0.1
APP_PORT=8000
APP_RELOAD=true

# ─── Security ──────────────────────────────────────────────
APP_SECRET_KEY=your-secret-key-here

# ─── Logging ───────────────────────────────────────────────
APP_LOG_LEVEL=info

# ─── JWT ───────────────────────────────────────────────────
APP_JWT_ALGORITHM=HS256
APP_JWT_ACCESS_TOKEN_EXPIRES_MINUTES=15
APP_JWT_REFRESH_TOKEN_EXPIRES_MINUTES=10080  # 7 days
